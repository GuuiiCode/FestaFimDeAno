<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/background"
    tools:context="br.com.guilherme.festafimdeano3.view.MainActivity">

    <TextView
        android:id="@+id/txt_data_atual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="03/05/2019"
        android:textSize="24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txt_data_atual"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/txt_fim_do_ano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_data_atual"
        android:text="@string/dias_restantes_para_o_fim_do_ano"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_dias_restantes_fim_ano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_fim_do_ano"
        android:text="242 dias"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/btn_confirma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NÃ£o confirmado"
        android:textColor="@color/colorTextWhite"
        android:layout_alignParentBottom="true"
        android:background="@drawable/backgroun_button"
        android:padding="20dp"
        android:textSize="14sp"/>

</RelativeLayout>